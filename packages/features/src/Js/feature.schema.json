{
	"$id": "https://blockera.ai/feature.schema.json",
	"title": "Blockera Feature Config",
	"type": "object",
	"properties": {
		"name": {
			"type": "string"
		},
		"context": {
			"type": "array",
			"items": {
				"type": "string"
			}
		},
		"description": {
			"type": "string"
		},
		"blocks": {
			"type": "object",
			"patternProperties": {
				"^.*$": {
					"type": "object",
					"properties": {
						"selector": {
							"type": "string"
						}
					},
					"required": ["selector"],
					"additionalProperties": true
				}
			},
			"additionalProperties": true
		},
		"config": {
			"type": "object",
			"properties": {
				"blockEditor": {
					"type": "object",
					"properties": {
						"edit": {
							"type": "object",
							"additionalProperties": true
						},
						"contextualToolbar": {
							"type": "object",
							"additionalProperties": true
						}
					},
					"required": [],
					"additionalProperties": true
				},
				"renderBlock": {
					"type": "object",
					"additionalProperties": true
				}
			},
			"required": [],
			"additionalProperties": false
		}
	},
	"required": ["name", "config", "blocks", "context", "description"],
	"additionalProperties": false
}
